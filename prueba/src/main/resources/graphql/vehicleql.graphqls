type Friends{
	id: String
	fid: String
}

type Appears {
	charid: String
	episodeid: String
}
type Heroes{
	episode: String
	charid: String
}

type Character{
	id: String
	fname: String
	lname: String
	type: String
}
type Episode{
	eid: String
	ecode: String
}

type Query {
	listFriends(id:String, fid:String): [Friends]
	listAppears(charid:String):[Appears]
	listHeroes(episode:String, charid:String): [Heroes]
	listCharacter(id: String, fname:String, lname:String, type:String) : [Character]
	listEpisode(eid:String, ecode:String): [Episode]
}

type Mutation {
	createFriends(id:String, fid:String): Friends
	createAppears(charid:String, episodeid:String): Appears
	createHeroes(episode:String, charid:String): Heroes
	createCharacter(id:String, fname:String, lname:String, type:String): Character
	createEpisode(eid:String, ecode:String): Episode
}